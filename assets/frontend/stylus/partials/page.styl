body
    color $blackColor
    font-size 14px
    font-weight 400
    line-height 1.3em
    min-width 280px
    height 100%
    
    @media (min-width: 900px)
        font-size 17px
    img
        display block
        max-width 100%
    
.fixed-width
    padding-left 30px
    padding-right 30px
    margin auto
    max-width 480px // 420px + 60px
    box-sizing border-box
    
    @media (min-width: 500px)
        padding-left 40px
        padding-right 40px
        max-width 700px // 620px + 80px
        
    @media (min-width: 900px)
        max-width 800px // 720px + 80px
        
    @media (min-width: 1280px)
        max-width 1040px // 980px + 80px
        

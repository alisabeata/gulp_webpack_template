html
    height 100%
    
a
a:visited
    color inherit
    text-decoration underline
    &:hover
    &:active
        text-decoration none
        
.hidden-elem
    display none

.clearfix
    zoom 1

.clearfix:after
    clear both
    content ''
    display block
    height 0
    visibility hidden

.italic
    font-style italic

.bold
    font-weight bold

.bold-italic
    font-style italic
    font-weight bold

.float-left
    float left

.float-right
    float right

.align-left
    text-align left

.align-right
    text-align right

.align-center
    text-align center

p
    margin-bottom 1em


.btns
a.btns
input.btns
    display inline-block
    text-align center
    text-decoration none
    cursor pointer

.page__content
    ul
        list-style disc outside
        margin-bottom 1em
    ol
        list-style decimal inside
        margin-bottom 1em
    b, strong
        font-weight bold
    i, em
        font-style italic
        


        
